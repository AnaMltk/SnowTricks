{% for comment in comments %}
	<div class="card">

		<div class="card-body">
			<div class="row">
				<div class="col">
					{% if comment.figure.user.avatar is empty %}

						<img class="avatar" src="/img/placeholder-avatar.png">

					{% else %}
						<img class="avatar" src="{{ asset('img/'~comment.figure.user.avatar) }}">
					{% endif %}
				</div>
				<div class="col">
					<div class="text-end">
						<div class="fw-bold">2021-08-13 09:05:22</div>
						<div class="fw-bold">Ã‰crit par
							{{ comment.user.name }}
						</div>
					</div>
				</div>
			</div>
			<p class="text-center">{{comment.content}}</p>
		</div>
	</div>

{% endfor %}
