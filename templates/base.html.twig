<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

		
		<title>
			{% block title %}{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																																																																																																																																				           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}


	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark" id="mainNav">
			<div class="container px-4 px-lg-5">
				<a class="navbar-brand" href="/">Page d'accueil</a>

				<div class="collapse navbar-collapse" id="myNavbar">
					<ul class="navbar-nav ms-auto py-4 py-lg-0">
						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link px-lg-3 py-3 py-lg-4" href="/login">Se connecter</a>
							</li>
						{% endif %}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link px-lg-3 py-3 py-lg-4" href="/logout">Se déconnecter</a>
							</li>
						{% endif %}
						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link px-lg-3 py-3 py-lg-4" href="/registration">Créer un compte</a>
							</li>
						{% endif %}
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link px-lg-3 py-3 py-lg-4" href="/new">Créer une nouvelle figure</a>
							</li>

						{% endif %}


					</ul>
				</div>
			</div>
		</nav>
		{% block header %}{% endblock %}
		{% block body %}{% endblock %}


	</body>

	{% block footer %}
		<footer
			class="bg-dark text-center text-white">
			<!-- Grid container -->
			<div class="container p-4">

				<section
					class="mb-4">

					<!-- Linkedin -->
					<a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/anastasia-molotkova/" role="button">
						<i class="fab fa-linkedin-in"></i>
					</a>

					<!-- Github -->
					<a class="btn btn-outline-light btn-floating m-1" href="https://github.com/AnaMltk" role="button">
						<i class="fab fa-github"></i>
					</a>
				</section>
			</div>
			<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
				© 2021 Copyright: Anastasia Molotkova
			</div>
		</footer>

		<div id="footer-mobile">
			<div class="container">
				<div class="col-xs-12 navbar-inverse navbar-fixed-bottom">
					<div class="row" id="bottomNav">
						<div class="col col-xs-4 text-center">
							<a href="/">
								<i class="glyphicon glyphicon-circle-arrow-left"></i><br><i class="fas fa-home"></i>
							</a>
						</div>
						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
							<div class="col col-xs-4 text-center">
								<a href="/login">
									<i class="glyphicon glyphicon-circle-arrow-down"></i><br><i class="fas fa-sign-in-alt"></i>
								</a>
							</div>
						{% endif %}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<div class="col col-xs-4 text-center">
								<a href="/logout">
									<i class="glyphicon glyphicon-circle-arrow-right"></i><br><i class="fas fa-sign-out-alt"></i>
								</a>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
		<!-- Footer -->
	{% endblock %}
</html>
{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}
