{% extends 'base.html.twig' %}
{% block body %}
	<div class="container fill">

		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-5 text-center">Modifiez la photo</h1>
				{{ form_start(form)}}
				<div class="form-group">
					{{ form_row(form.path)}}
				</div>
				<input type="hidden" value="{{ figure.id }}" name="figure_id">
				<div class="form-group">
					{{ form_row(form.alt)}}
				</div>
				<button class="btn btn-outline-secondary text-uppercase" type="submit">Submit</button>

				{{ form_end(form)}}


			</div>
		</div>
	</div>
{% endblock %}
