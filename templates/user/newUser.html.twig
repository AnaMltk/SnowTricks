{% extends 'base.html.twig' %}

{% block title %}Nouveau utilisateur
{% endblock %}

{% block body %}

	<div class="container fill">
	{% for message in app.flashes('registration') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-5 text-center">Inscrivez-vous</h1>
				{{ form_start(form)}}
				<div class="form-group">
					{{ form_row(form.email)}}
				</div>
				<div class="form-group">
					{{ form_row(form.name)}}
				</div>
				<div class="form-group">
					{{ form_row(form.password)}}
				</div>
				<div class="form-group">
					{{ form_row(form.avatar)}}
				</div>

				{{ form_end(form)}}


			</div>
		</div>
	</div>
{% endblock %}
